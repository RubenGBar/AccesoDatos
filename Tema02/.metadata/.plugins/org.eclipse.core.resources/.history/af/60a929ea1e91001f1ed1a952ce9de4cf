package boletin2;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class Tarea1 {
	
	public static void main(String[] args) {
		
		leerFichero();

	}
	
	public static void leerFichero()  {
        
        File fichero=new File("src/boletin2/palabras.txt");
		FileReader fic = null;
		int i;
		char[] letras = new char[(int) fichero.length()];
		String[] palabras;
		
		try {
			
			fic = new FileReader(fichero);
			while ((i = fic.read(letras,0,6)) != -1) { //se va leyendo un car√°cter hasta que lea -1
				System.out.println(letras); //cast a char
			}
			
			fic.close();//cerrar fichero 
			
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} 
		
	}
	
}
